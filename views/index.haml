!!!
%html
  %head
    %title RecordBreakr
    %link{"rel" => "stylesheet", "href" => "ui.css", "type" => "text/css"}
  %body
    %h2 RecordBreakr    
    .status
      .status-heading Analyzing activities ...      
      %progress#statusbar{:value => "", :max => ""}
    #topten-container
      %table.topten
        %tr
          %th
          - @records.each_key do |distance|
            %th= format_distance distance
        - @topten.each_with_index do |topten_place, i|
          %tr
            %td #{i+1}.    
            - topten_place.each_value do |place|
              %td
                - if not place[:record].nil? and not place[:record][:time].nil?
                  %a{:href => @urls[place[:activity]]}= format_duration place[:record][:time]
    .settings
      %a{:href => "/refresh"} refresh records
    %script{:src => "https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"}
    %script{:src => "http://malsup.github.com/jquery.blockUI.js"}
    %script{:src => "http://github.com/DmitryBaranovskiy/raphael/raw/master/raphael-min.js"}
    %script{:src => "http://github.com/DmitryBaranovskiy/g.raphael/blob/master/min/g.raphael-min.js?raw=true"}
    %script{:src => "ui.js"}    
